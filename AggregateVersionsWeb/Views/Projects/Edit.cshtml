@model Project

<div class="container">
    <h1>Edit Project</h1>
    <form asp-controller="Projects" asp-action="Edit" method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="Name">Project Name</label>
            <input class="form-control" type="text" asp-for="Name" value="@Model.Name" required />
        </div>
        <div>
            <input type="hidden" asp-for="ID" value="@Model.ID" />
        </div>
        <div>
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
